<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:padding="10dp"
    app:cardBackgroundColor="@color/material_light_orange"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/results"
            android:id="@+id/result"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decibel"
            android:id="@+id/decibelText"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/result"/>
        <TextView
            android:id="@+id/registeredDecibel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/decibelText"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:id="@+id/cityText"
            android:textSize="30sp"
            android:paddingTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/registeredDecibel"/>
        <TextView
            android:id="@+id/registeredCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityText"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timestamp"
            android:id="@+id/timestampText"
            android:textSize="30sp"
            android:paddingTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/registeredCity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registeredTimestamp"
            android:layout_below="@id/timestampText"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>