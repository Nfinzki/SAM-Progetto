<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StatisticFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:useDefaultMargins="true"
    android:rowCount="2"
    android:columnCount="2">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:cardBackgroundColor="@color/material_light_orange"
        app:cardCornerRadius="5dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loudest_hour"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/lh" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:00"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    android:id="@+id/loudest_hour"
                    android:layout_below="@id/lh" />
            </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:cardBackgroundColor="@color/material_light_orange"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loudest_day"
                android:layout_centerHorizontal="true"
                android:id="@+id/ld" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05/06/22"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:id="@+id/loudest_day"
                android:layout_below="@id/ld" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:cardBackgroundColor="@color/material_light_orange"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/loudest_month"
                android:id="@+id/lm" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giu"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:id="@+id/loudest_month"
                android:layout_below="@id/lm" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:cardBackgroundColor="@color/material_light_orange"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/loudest_city"
                android:id="@+id/lc" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pisa"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:id="@+id/loudest_city"
                android:layout_below="@id/lc" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</GridLayout>